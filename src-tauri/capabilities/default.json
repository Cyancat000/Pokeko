{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the app",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    "fs:allow-read-file",
    "fs:allow-write-file",
      {
        "identifier": "fs:scope",
        "allow": [
          {
            "path": "$HOME"
          },
          {
            "path": "$HOME/**"
          }
        ]
      }
  ]
}